{
  "name": "linecaller",
  "version": "0.1.0",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "wait-on http://localhost:3000 && electron electron/main.js",
    "dev:desktop": "concurrently \"npm run dev\" \"npm run electron\"",
    "build:next": "next build",
    "pack": "electron-builder --dir --win",
    "dist": "electron-builder --win",
    "build:desktop": "npm run build:next && electron-builder --win"
  },
  "dependencies": {
    "next": "16.1.1",
    "openai": "^6.15.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
  ,
  "build": {
    "asar": false,
    "appId": "com.example.linecaller",
    "productName": "LineCaller",
    "asarUnpack": [".next/**"],
    "files": [
      "electron/**/*",
      "app/**/*",
      ".next/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    }
  }
}
